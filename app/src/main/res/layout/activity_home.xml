<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e7e9"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/reportCrimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:text="Report Crime"
        android:textSize="17dp"
        android:layout_marginTop="170dp"/>

    <Button
        android:id="@+id/reportMissPersonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:text="Report Missing Person"
        android:textSize="17dp"
        android:layout_marginTop="240dp"/>

    <Button
        android:id="@+id/reportSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:text="Search Reports"
        android:textSize="17dp"
        android:layout_marginTop="310dp"/>

    <ImageView
        android:id="@+id/reportCrimeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_report_black_24dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:id="@+id/reportMissPersonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:id="@+id/reportSearchImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pageview_black_24dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="100dp"/>


</RelativeLayout>