<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.missingperson.MissingPersonFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Report Missing Person"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:text="Full Name:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="20dp"
            android:text="Age: "
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="80dp"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="20dp"
            android:text="Gender:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/genderEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/lastSeenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="20dp"
            android:text="Last Seen:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/lastSeenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:layout_marginTop="365dp"
            android:layout_marginLeft="20dp"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/personDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="20dp"
            android:text="Details:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/personDetailsEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:layout_marginTop="455dp"
            android:layout_marginLeft="20dp"/>

        <!--<TextView
            android:id="@+id/uploadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="20dp"
            android:text="Upload Image:"
            android:textSize="20sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:id="@+id/selectImage"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="20sp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:layout_marginTop="610dp"
            android:layout_marginLeft="20dp"/>-->

        <Button
            android:id="@+id/personSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="report"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="530dp"/>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</ScrollView>