            if(status == LoaderCallbackInterface.SUCCESS){
                Log.i(TAG,"OpenCV Loaded successfully");
                cameraBridgeViewBase.enableView();
            }else {
                super.onManagerConnected(status);
            }
        }
    };

    private volatile boolean running = false;
