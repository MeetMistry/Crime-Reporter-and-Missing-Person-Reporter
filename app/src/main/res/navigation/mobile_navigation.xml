<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_report">

    <fragment
        android:id="@+id/navigation_report"
        android:name="com.example.crimereporter.ui.report.ReportFragment"
        android:label="@string/title_report"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/navigation_missingPerson"
        android:name="com.example.crimereporter.ui.missingperson.MissingPersonFragment"
        android:label="@string/title_missingPerson"
        tools:layout="@layout/fragment_missingperson" />

    <fragment
        android:id="@+id/navigation_view"
        android:name="com.example.crimereporter.ui.view.ViewFragment"
        android:label="@string/title_view"
        tools:layout="@layout/fragment_view" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.crimereporter.ui.view.ViewFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_view" />
</navigation>
